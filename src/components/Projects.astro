---
import { useTranslations } from '../i18n/utils';
import { Image } from 'astro:assets';

interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const projects = [
  {
    title: lang === 'es' ? 'Red Social Sostenible' : 'Sustainable Social Network',
    description: lang === 'es' 
      ? 'Una red social enfocada en la sostenibilidad y el medio ambiente, donde los usuarios pueden crear proyectos para poder contribuir al medio ambiente.'
      : 'A social network focused on sustainability and the environment, where users can create projects to contribute to the environment.',
    tech: ['React', 'Springboot', 'PostgreSQL', 'TypeScript', 'Docker'],
    image: '/projects/RedSocialProyectosAmbientales.png',
    github: 'https://github.com/danieloyolamoreno',
    demo: '#',
    featured: true
  }
];
---

<section id="proyectos" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="section-title text-center mb-16" data-aos="fade-up">{t('projects.title')}</h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project, idx) => (
          <article 
            class="glass rounded-xl overflow-hidden card-hover group relative"
            data-aos="fade-up"
            data-aos-delay={idx * 100}
          >
            {project.featured && (
              <div class="absolute top-4 right-4 z-10 px-3 py-1 bg-primary text-white text-xs font-bold rounded-full shadow-lg">
                ⭐ {t('projects.featured')}
              </div>
            )}
            
            <div class="aspect-video bg-gradient-to-br from-primary/20 to-blue-200 overflow-hidden relative">
              <Image 
                src={project.image}
                alt={`Captura de pantalla del proyecto ${project.title}`}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                loading="lazy"
                width={500}
                height={281}
              />
              <div class="absolute inset-0 bg-gradient-to-t from-secondary/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end justify-center pb-6 gap-4">
                {project.github && (
                  <a 
                    href={project.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="px-4 py-2 bg-white text-secondary rounded-lg font-semibold text-sm button-hover"
                    aria-label={`Ver código de ${project.title} en GitHub`}
                  >
                    {t('projects.code')}
                  </a>
                )}
                {project.demo && project.demo !== '#' && (
                  <a 
                    href={project.demo}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="px-4 py-2 bg-primary text-white rounded-lg font-semibold text-sm button-hover"
                    aria-label={`Ver demo de ${project.title}`}
                  >
                    {t('projects.demo')}
                  </a>
                )}
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-bold text-secondary mb-3 group-hover:text-primary transition-colors">
                {project.title}
              </h3>
              <p class="text-gray-600 mb-4 leading-relaxed line-clamp-3">
                {project.description}
              </p>
              
              <div class="flex flex-wrap gap-2">
                {project.tech.map((tech) => (
                  <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm font-medium hover:bg-primary hover:text-white transition-colors">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>
      
      <div class="text-center mt-12" data-aos="fade-up" data-aos-delay="600">
        <a 
          href="https://github.com/danieloyolamoreno?tab=repositories" 
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-8 py-4 border-2 border-primary text-primary rounded-lg font-semibold button-hover"
          aria-label="Ver todos mis proyectos en GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          {t('projects.viewMore')}
        </a>
      </div>
    </div>
  </div>
</section>