              <h4 class="text-xl font-bold text-secondary mb-6 text-center">{category.title}</h4>
              <div class="space-y-3">
                {category.skills.map((skill) => (
                  <div class="text-center">
                    <span class="text-sm font-medium text-gray-700">{skill.name}</span>
