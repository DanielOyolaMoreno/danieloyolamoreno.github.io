<script>
  // Rotating text animation
  const rotatingText = document.getElementById('rotating-text');
  const technologies = ['Angular', 'React', 'SpringBoot', 'TypeScript', 'PostgreSQL'];
  let currentIndex = 0;
  
  if (rotatingText) {
    const updateText = () => {
      rotatingText.style.opacity = '0';
      rotatingText.style.transform = 'translateY(10px)';
      
      setTimeout(() => {
        rotatingText.textContent = technologies[currentIndex];
        rotatingText.style.opacity = '1';
        rotatingText.style.transform = 'translateY(0)';
        currentIndex = (currentIndex + 1) % technologies.length;
      }, 300);
    };
    
    rotatingText.style.transition = 'opacity 0.3s, transform 0.3s';
    updateText();
    setInterval(updateText, 2000);
  }
  
  // Typing animation for hero title (vanilla JS implementation)
  const heroTitle = document.getElementById('hero-title');
  if (heroTitle) {
    // Narrow to a non-null HTMLElement for use inside nested functions
    const el = /** @type {HTMLElement} */ (heroTitle);
    const text = el.innerHTML;
    el.innerHTML = '';
    el.style.opacity = '1';
    
    let index = 0;
    const speed = 50;
    
    function typeWriter() {
      if (index < text.length) {
        if (text.charAt(index) === '<') {
          // Handle HTML tags
          const closingIndex = text.indexOf('>', index);
          if (closingIndex === -1) {
            // Fallback: append rest and end
            el.innerHTML += text.substring(index);
            index = text.length;
          } else {
            el.innerHTML += text.substring(index, closingIndex + 1);
            index = closingIndex + 1;
          }
        } else {
          el.innerHTML += text.charAt(index);
          index++;
        }
        setTimeout(typeWriter, speed);
      }
    }
    
    // Start typing after a short delay
    setTimeout(typeWriter, 500);
  }
</script>