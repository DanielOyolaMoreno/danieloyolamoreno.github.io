---
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const experiences = [
  {
    company: 'Ies Eugenio Hermoso',
    position: t('titles.eso'),
    period: '2017 - 2021',
    current: false,
    description: '',
    achievements: [],
    logo: 'ðŸŽ“'
  },
  {
    company: 'Ies Ildefonso Serrano',
    position: t('titles.smr'),
    period: '2022 - 2023',
    current: false,
    description: t('titles.smrDesc'),
    achievements: [],
    logo: 'ðŸŽ“'
  },
  {
    company: 'Ies Castelar',
    position: t('titles.daw'),
    period: lang === 'es' ? '2024 - Actualidad' : '2024 - Present',
    current: true,
    description: '',
    achievements: [],
    logo: 'ðŸŽ“'
  }
];
---

<section id="titulos" class="py-20 bg-gradient-to-br from-gray-50 to-purple-50">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <h2 class="section-title text-center mb-16" data-aos="fade-up">{t('titles.title')}</h2>
      
      <div class="relative">
        <!-- Timeline Line -->
        <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-gradient-to-b from-primary via-blue-400 to-purple-400"></div>
        
        <div class="space-y-12">
          {experiences.map((exp, idx) => (
            <div 
              class={`relative ${idx % 2 === 0 ? 'md:pr-1/2' : 'md:pl-1/2 md:ml-auto'}`}
              data-aos={idx % 2 === 0 ? 'fade-right' : 'fade-left'}
              data-aos-delay={idx * 150}
            >
              <!-- Timeline Dot -->
              <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 -translate-y-4 w-4 h-4 bg-primary rounded-full border-4 border-white shadow-lg z-10"></div>
              
              <div class="glass p-8 rounded-xl shadow-lg card-hover relative">
                {exp.current && (
                  <div class="absolute -top-3 -right-3 px-4 py-1 bg-gradient-to-r from-green-400 to-green-600 text-white text-xs font-bold rounded-full shadow-lg animate-pulse">
                    {t('titles.current')}
                  </div>
                )}
                
                <div class="flex items-start gap-4 mb-4">
                  <div class="text-4xl">{exp.logo}</div>
                  <div class="flex-1">
                    <h3 class="text-2xl font-bold text-secondary mb-1">{exp.position}</h3>
                    <p class="text-primary font-semibold text-lg mb-1">{exp.company}</p>
                    <span class="inline-flex items-center gap-1 text-gray-600 font-medium text-sm">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      {exp.period}
                    </span>
                  </div>
                </div>
                
                {exp.description && (
                  <p class="text-gray-700 mb-4 leading-relaxed">{exp.description}</p>
                )}
                
                {exp.achievements.length > 0 && (
                  <ul class="space-y-3">
                    {exp.achievements.map((achievement) => (
                      <li class="flex items-start gap-3 text-gray-700">
                        <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <span>{achievement}</span>
                      </li>
                    ))}
                  </ul>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>